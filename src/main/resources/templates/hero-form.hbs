
{{#partial "content"}}
    {{#if editHero}}
        <div class="contact1">
            <div class="container-contact1">
                <div class="contact1-pic js-tilt" data-tilt>
                    <img src="/images/hero.jpg" alt="IMG">
                </div>
                <form class="contact1-form validate-form" action="/heroes/{{hero.id}}" method="post">

                <span class="contact1-form-title">
                    Add a hero
                </span>
                    <div class="wrap-input1 validate-input" data-validate="Name is required">
                        <input class="input1" type="text" name="hero_name" id="hero_name" placeholder="Add the heroes name">
                        <span class="shadow-input1"></span>
                    </div>
                    <div class="wrap-input1 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                        <input class="input1" type="number" name="hero_age" placeholder="Add the heros age">
                        <span class="shadow-input1"></span>
                    </div>
                    <div class="wrap-input1 validate-input" data-validate="Subject is required">
                        <input class="input1" type="text" name="hero_power" id="hero_power "placeholder="Add the heroes power">
                        <span class="shadow-input1"></span>
                    </div>
                    <div class="wrap-input1 validate-input" data-validate="Message is required">
                        <input class="input1" id="hero_weakness" name="hero_weakness" placeholder="Add the heroes weakness">
                        <span class="shadow-input1"></span>
                    </div>
                    {{#if squads}}
                        <label for="squad_id">Place him in a squad</label>
                        <select id="id" name="id" class="input1">
                            {{#each squads}}
                                <option value={{squad_id}}> {{squad_name}}</option>
                            {{/each}}
                        </select>
                    {{/if}}
                    <div class="container-contact1-form-btn">
                        <button class="contact1-form-btn">
                    <span>
                    Add hero
                    <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
                    </span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    {{else}}
        <div class="contact1">
            <div class="container-contact1">
                <div class="contact1-pic js-tilt" data-tilt>
