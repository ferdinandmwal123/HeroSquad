{{#partial "content"}}
    {{#if editSquad}}
        <div class="contact1">
            <div class="container-contact1">
                <div class="contact1-pic js-tilt" data-tilt>
                    <img src="/images/squad.png" alt="IMG">
                </div>
                <form class="contact1-form validate-form" action="/squads/{{squad.id}}" method="post">

                <span class="contact1-form-title">
                    Edit squad
                </span>
                    <div class="wrap-input1 validate-input">
                        <input class="input1" type="text" name="squad_name" id="squad_name" placeholder="Edit the squads name" >
                        <span class="shadow-input1"></span>
                    </div>
                    <div class="wrap-input1 validate-input" >
                        <input class="input1" type="number" name="squad_size" placeholder="Edit the squads size">
                        <span class="shadow-input1"></span>
                    </div>
                    <div class="wrap-input1 validate-input" >
                        <input class="input1" type="text" name="squad_cause" id="squad_cause"placeholder="Edit the squads cause">
                        <span class="shadow-input1"></span>
                    </div>

                    <div class="container-contact1-form-btn">
                        <button class="contact1-form-btn">
                    <span>
                    Add squad
                    <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
                    </span>
                        </button>
                    </div>
                </form>
            </div>
        </div>

        {{else}}
        <div class="contact1">
            <div class="container-contact1">
                <div class="contact1-pic js-tilt" data-tilt>
                    <img src="/images/squad.png" alt="IMG">
                </div>
                <form class="contact1-form validate-form" action="/squads" method="post">

                <span class="contact1-form-title">
                    Add a squad
                </span>
                    <div class="wrap-input1 validate-input">
                        <input class="input1" type="text" name="squad_name" id="squad_name" placeholder="Add the squads name" value="{{id}}">
                        <span class="shadow-input1"></span>
                    </div>
                    <div class="wrap-input1 validate-input" >
                        <input class="input1" type="number" name="squad_size" placeholder="Add the squads size">
                        <span class="shadow-input1"></span>
                    </div>
                    <div class="wrap-input1 validate-input" >
                        <input class="input1" type="text" name="squad_cause" id="squad_cause"placeholder="Add the squads cause">
                        <span class="shadow-input1"></span>
                    </div>

                    <div class="container-contact1-form-btn">
                        <button class="contact1-form-btn">
                    <span>
                    Add squad
                    <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
                    </span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    {{/if}}
{{/partial}}

{{> layout.hbs}}